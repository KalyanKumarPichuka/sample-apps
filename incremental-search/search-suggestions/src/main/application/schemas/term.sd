schema term {

    document term {

        field term type string {
            indexing: summary | index
            match   : prefix 
        } 

        field count type int {
            indexing: summary | attribute
        }

        field docs type int {
            indexing: summary | attribute
        }
        
    } 

    fieldset default {
        fields: term
    }

    rank-profile term_rank inherits default {
        first-phase {
            expression {
              attribute(count)
            }
        }
    }

}
