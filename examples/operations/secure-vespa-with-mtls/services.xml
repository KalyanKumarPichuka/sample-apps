<services version="1.0">

  <admin version='2.0'>
    <adminserver hostalias="config0" />
    <configservers>
      <configserver hostalias="config0" />
      <configserver hostalias="config1" />
      <configserver hostalias="config2" />
    </configservers>
    <cluster-controllers>
      <cluster-controller hostalias="config0" jvmargs="-Xms32M -Xmx64M" /> <!-- jvmargs added only to shrink memory for testing - remove before real use -->
      <cluster-controller hostalias="config1" jvmargs="-Xms32M -Xmx64M" />
      <cluster-controller hostalias="config2" jvmargs="-Xms32M -Xmx64M" />
    </cluster-controllers>
    <slobroks>
      <slobrok hostalias="config0" />
      <slobrok hostalias="config1" />
      <slobrok hostalias="config2" />
    </slobroks>
  </admin>

  <container id="container" version="1.0">
    <document-api />
    <document-processing/>
    <search />
    <nodes>
      <jvm options="-Xms32M -Xmx128M"/> <!-- Added only to shrink memory for testing - remove before real use -->
      <node hostalias="container0" />
    </nodes>
    <http>
      <server id="default" port="8080" />
      <server id="ingress" port="8443">
        <ssl>
          <private-key-file>/var/tls/host.key</private-key-file>
          <certificate-file>/var/tls/host.pem</certificate-file>
          <ca-certificates-file>/var/tls/ca-client.pem</ca-certificates-file>
          <client-authentication>need</client-authentication>
        </ssl>
      </server>
    </http>
  </container>

  <content id="music" version="1.0">
    <redundancy>2</redundancy>
    <documents>
      <document type="music" mode="index" />
      <document-processing cluster="container"/>
    </documents>
    <nodes>
      <node hostalias="content0" distribution-key="0" />
      <node hostalias="content1" distribution-key="1" />
      <node hostalias="content2" distribution-key="2" />
    </nodes>
  </content>

</services>
